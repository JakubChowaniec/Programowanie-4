<Window x:Class="Instruction1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Instruction1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >

        <Button x:Name="Klik" Margin ="184,177,389,194" Click="Button_Click" Content="Kliknij mnie" RenderTransformOrigin="0.5,0.5" Background="#FF834141" BorderBrush="#FF8D4D4D" Height="50" FontFamily="Sitka Small" FontSize="18" FontWeight="Bold" >
            <Button.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.OpacityMask>
        </Button>
        <Button x:Name="Danger" Margin ="300,45,200,300" Click="Button_Click" Content="Do not push this Button"></Button>
        <Label x:Name="Label_Count" Content="Licznik&#xD;&#xA;Kliknięć" HorizontalAlignment="Left" Margin="356,254,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.446,0.632" Height="51" Width="118" FontWeight="Bold" FontFamily="Cascadia Code SemiBold"/>



    </Grid>
</Window>
